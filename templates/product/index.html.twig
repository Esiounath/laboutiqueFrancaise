{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}
{% block content %}
    <h1>Nos produits</h1>
    {% for product in products %}
        <div class="card" style="width: 18rem;">
            <a href="{{ path('one_product', {'slug' : product.slug}) }}">
                <img class="card-img-top" src="{{ asset('uploads/' ~ product.illustration) }}" alt="{{ product.name }}">
            </a>
            <div class="card-body">
                <p class="card-text">{{ product.name }}</p>
            </div>
        </div>
    {% endfor %}
{% endblock %}
